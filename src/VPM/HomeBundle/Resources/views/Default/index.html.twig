{% extends ":front:layout.html.twig" %}

{% block topPage %}
  {{include("VPMHomeBundle::slider.html.twig")}}
{% endblock %}

{% block body %}
<div class="container">
	<h1>Produits r√©cents : </h1>
	<div class="row">

{% for produit in produits %}
<div class="col-md-3 col-lg-3 col-sm-3 col-xs-6">
  <div class="thumbnail">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-lg-12 col-xs-12">
         <img class="img-responsive" alt="{{ produit.firstImage.alt }}" src="{{ asset(produit.firstImage.path)}}">
      </div>
    </div>
    <div class="row">
      <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <h3 class="text-center">{{ produit.nom }}</h3>
        <p class="text-center">
          <img src="{{asset(produit.marque.image.path)}}" class="img-responsive">
        </p>
        <p class="text-center">{{ produit.shortDescription }}</p>
        <hr>
        <h3 class="text-center">{{ produit.prixTTC|number_format(2, ',', ' ') }} &euro;</h3>
        <div class="btn-group btn-group-justified" role="group" aria-label="...">
          <a class="btn btn-primary" href="{{ path('vpm_produit_pageproduit', {slug: produit.slug} ) }}"><i class="fa fa-eye" aria-hidden="true"></i> Voir la fiche</a>
        </div>
      </div>
    </div>
  </div>   
</div>

 {% endfor %}

		
	</div>
</div>
{% endblock %}

{% block javascript %}
  {{parent()}}
  <script src="{{ asset('components/Materialize/js/slider.js') }}"></script>
     <script type="text/javascript">
      $(document).ready(function(){
         $('.slider').slider({full_width: true});
      });
     </script>
  }
{% endblock %}