{% extends ':back:layout.html.twig' %}

{% block body %}
    <h1>Categorie list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Idbihr</th>
                <th>Nom</th>
                <th>Shortdescription</th>
                <th>Longdescription</th>
                <th>Slug</th>
                <th>Metatitre</th>
                <th>Metadescription</th>
                <th>Metakeyword</th>
                <th>Active</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for categorie in categories %}
            <tr>
                <td><a href="{{ path('admin_categorie_show', { 'id': categorie.id }) }}">{{ categorie.id }}</a></td>
                <td>{{ categorie.idBihr }}</td>
                <td>{{ categorie.nom }}</td>
                <td>{{ categorie.shortDescription }}</td>
                <td>{{ categorie.longDescription }}</td>
                <td>{{ categorie.slug }}</td>
                <td>{{ categorie.metaTitre }}</td>
                <td>{{ categorie.metaDescription }}</td>
                <td>{{ categorie.metaKeyword }}</td>
                <td>{% if categorie.active %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_categorie_show', { 'id': categorie.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_categorie_edit', { 'id': categorie.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_categorie_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
